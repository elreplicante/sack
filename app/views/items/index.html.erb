<div class="row">
    <%= render partial: 'sidebar', locals: { items: @items }  %>
    <section class="bck text">
        <%= render partial: 'search_form', locals: { items: @items } %>
    </section>
</div>

<div class="row text margin column_12">
<% @items.each do |item| %>
    <section class="bck column_3 padding item-result">
        <header>
            <h3 class="text bold"><%= link_to item.title, item.url, target: 'blank' %></h3>
        </header>
        <p class="padding-bottom"><%= item.description %></p>
        <p> <%= link_to 'Edit Item',edit_item_path(item), class: 'button anchor secondary' %></span>
        </p>
    </section>
    <% end %>
</div>